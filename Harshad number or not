#include<bits/stdc++.h>
using namespace std;
int main()
{
    int num, temp, sum = 0, rem;
    cout<<"enter a number" <<endl;
    cin>>num;
    temp = num;
    while(temp)
    {
        rem = temp % 10;
        sum = sum + rem;
        temp = temp / 10;
    }
    
    int res = num % sum;
    if(res == 0)
    cout<<"Harshad Number" <<endl;
    else
    cout<<"Not a Harshad Number" <<endl;
    return 0;
}

enter a number
1729
Harshad Number
