#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,i,sum = 0;
    cout<<"enter a number" <<endl;
    cin>>n;
    for(i=1; i<=n; i++)
    {
        if(n%i==0)
        {
            sum = sum + i;
        }
    }
    if(sum == n)
    {
        cout<<"perfect number" <<endl;
    }
    else
    {
        cout<<"not a perfect number" <<endl;
    }
    return 0;
}

enter a number
35
not a perfect number
